{
  "info": {
    "name": "OTP Visitor Management System",
    "description": "API collection for the hostel OTP-based visitor management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "guard_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "student_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "visit_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Guard Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"guard1\",\n  \"password\": \"guard123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/guard/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "guard", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.token);",
                  "    pm.collectionVariables.set('guard_id', response.user.id);",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Student Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@vnrvjiet.in\",\n  \"password\": \"1234\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/student/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "student", "login"]
            }
          }
        },
        {
          "name": "Warden Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"warden1\",\n  \"password\": \"warden123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/warden/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "warden", "login"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "OTP Management",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"{{student_id}}\",\n  \"visitorName\": \"John Doe\",\n  \"visitorPhone\": \"+919876543212\",\n  \"guardId\": \"{{guard_id}}\",\n  \"purpose\": \"Family visit\",\n  \"groupSize\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/request",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "request"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('OTP request successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"visitorPhone\": \"+919876543212\",\n  \"providedOtp\": \"123456\",\n  \"guardId\": \"{{guard_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "verify"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('visit_id', response.visit._id);",
                  "    pm.test('OTP verification successful', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Visit Management",
      "item": [
        {
          "name": "Get Active Visits",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/visits/active?guardId={{guard_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "visits", "active"],
              "query": [
                {
                  "key": "guardId",
                  "value": "{{guard_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Checkout Visitor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"guardId\": \"{{guard_id}}\",\n  \"notes\": \"Normal checkout\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/visits/{{visit_id}}/checkout",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "visits", "{{visit_id}}", "checkout"]
            }
          }
        },
        {
          "name": "Get Visit History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/visits/history?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "visits", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Override Management",
      "item": [
        {
          "name": "Request Override",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"guardId\": \"{{guard_id}}\",\n  \"visitorName\": \"Jane Smith\",\n  \"visitorPhone\": \"+919876543213\",\n  \"studentId\": \"{{student_id}}\",\n  \"reason\": \"Emergency family visit\",\n  \"purpose\": \"Family emergency\",\n  \"urgency\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/override/request",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "override", "request"]
            }
          }
        },
        {
          "name": "Get Pending Overrides (Warden)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/override/pending",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "override", "pending"]
            }
          }
        },
        {
          "name": "Process Override (Warden)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wardenId\": \"warden_id_here\",\n  \"action\": \"approved\",\n  \"wardenNotes\": \"Emergency approved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/override/override_request_id/process",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "override", "override_request_id", "process"]
            }
          }
        }
      ]
    },
    {
      "name": "Student Management",
      "item": [
        {
          "name": "Search Students",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/students/search?query=student name&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "students", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "student name"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.students && response.students.length > 0) {",
                  "        pm.collectionVariables.set('student_id', response.students[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Student Preferences",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/students/{{student_id}}/preferences",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "students", "{{student_id}}", "preferences"]
            }
          }
        },
        {
          "name": "Update Student Preferences",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"autoApproveParents\": true,\n  \"whitelist\": [\n    {\n      \"name\": \"Parent\",\n      \"phone\": \"+919876543210\"\n    }\n  ],\n  \"preferences\": {\n    \"allowVisitorsOutOfHours\": false,\n    \"requirePhotoVerification\": true,\n    \"maxVisitorsPerDay\": 5\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/otp/students/{{student_id}}/preferences",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "students", "{{student_id}}", "preferences"]
            }
          }
        },
        {
          "name": "Get Student Visit History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/otp/students/{{student_id}}/visits?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "otp", "students", "{{student_id}}", "visits"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set base URL if not set",
          "if (!pm.collectionVariables.get('base_url')) {",
          "    pm.collectionVariables.set('base_url', 'http://localhost:4000');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test to check response time",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Global test to check for valid JSON response",
          "pm.test('Response is valid JSON', function () {",
          "    pm.response.to.be.json;",
          "});"
        ]
      }
    }
  ]
}
